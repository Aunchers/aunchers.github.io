---
import BaseLayout from "../layouts/BaseLayout.astro";
Astro.response.status = 404;
Astro.response.statusText = 'Not Found';
---

<BaseLayout>
  <div class="text-center py-12">
    <img
      src="https://http.cat/404.jpg"
      alt="404 Cat Error"
      class="mx-auto mb-4 w-48 h-48 object-cover rounded-full"
    />
    <h1 class="text-4xl font-semibold text-gray-800 mb-2">
      Oops! Page Not Found
    </h1>
    <p class="text-lg text-gray-600 mb-6">
      Looks like you've wandered off the beaten path.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-blue-600 text-white text-lg font-medium rounded-lg hover:bg-blue-700 transition duration-200"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
